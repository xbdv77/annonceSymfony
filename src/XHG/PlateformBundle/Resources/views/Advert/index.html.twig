{% extends "XHGPlateformBundle::layout.html.twig" %}

{% block title %}Accueil - {{ parent() }}{% endblock %}

{% block xhgplateform_body %}
    <h2>Liste des annonces</h2>
    <ul>
        {% for advert in listAdverts %}
            <li>
                <a href="{{ path('xhg_plateform_view', {'id': advert.id}) }}">
                    {{ advert.title }}
                </a>
                par {{ advert.author }},
                le {{ advert.date|date('d/m/Y') }}
            </li>
        {% else %}
            <li>Pas (encore !) d'annonces</li>
        {% endfor %}
    </ul>
{% endblock %}